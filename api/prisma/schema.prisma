generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id                     Int    @id @default(autoincrement())
  name                   String
  password               String
  xp                     Int    @default(0)
  shots                  Int    @default(0)
  number_quizzes         Int    @default(0)
  number_quizzes_success Int    @default(0)
  registerStudent        String @unique
  class_id               Int?
  classroom              Class? @relation(fields: [class_id], references: [id])
  itens                  Item[] @relation("ItemToStudent")

  @@map("students")
}

model Item {
  id           Int      @id @default(autoincrement())
  name         String
  image        String
  image_chibi  String?
  is_character Boolean
  description  String
  bonus        String
  colors       String[]
  equiped      Boolean  @default(false)
  rarity       String
  quotes       String[]

  students Student[] @relation("ItemToStudent")

  @@map("items")
}

model Teacher {
  id              Int    @id @default(autoincrement())
  name            String
  password        String
  registerTeacher String @unique
  classroom       Class?

  @@map("teachers")
}

model Class {
  id         Int       @id @default(autoincrement())
  name       String
  password   String
  teacher_id Int       @unique
  teacher    Teacher   @relation(fields: [teacher_id], references: [id])
  Students   Student[]

  @@map("classes")
}

model Quiz {
  id      Int      @id @default(autoincrement())
  title   String
  options String[]
  answer  Int

  @@map("quizzes")
}
